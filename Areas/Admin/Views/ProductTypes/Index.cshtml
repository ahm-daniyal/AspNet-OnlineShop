@model List<OnlineShop.Models.ProductTypes>
@{
    ViewData["Title"] = "Product Types";
}

<div class="row">
    <div class="col-md-6">
        <h3 class="text-info">Product Type List</h3>
    </div>
    <div class="col-md-6" style="text-align: right">
        <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus fa-2xs"></i> New Product Type</a>
    </div>
</div>

<div>
    <table class="table table-striped border mt-3">
        <thead>
            <tr class="table-info">
                <th>ProductType</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductType</td>
                    <td>
                        <partial name="_ProductTypesButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["save"]'
            if(save != '') {
                alertify.success(save);
            }
        })
    </script>
}
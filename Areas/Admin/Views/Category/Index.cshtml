@model List<OnlineShop.Models.Category>
@{
    ViewData["Title"] = "Category";
}

<div class="row">
    <div class="col-md-6">
        <h3 class="text-info">Category List</h3>
    </div>
    <div class="col-md-6" style="text-align: right">
        <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus fa-2xs"></i> Add Category</a>
    </div>
</div>

<div>
    <table class="table table-striped border mt-3">
        <thead>
            <tr class="table-info">
                <th>Category Name</th>
                <th>Product Name</th>
                <th>Product Type</th>
                <th>Tag Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.Products.Name</td>
                    <td>@category.ProductType</td>
                    <td>@category.TagName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["save"]'
            if(save != '') {
                alertify.success(save);
            }
        })
    </script>
}
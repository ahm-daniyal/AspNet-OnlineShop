@model List<OnlineShop.Models.Products>
@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-md-6">
        <h3 class="text-info">Products List</h3>
    </div>
    <div class="col-md-6" style="text-align: right">
        <a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus fa-2xs"></i> Add New Product</a>
    </div>
</div>

<form method="post">
    <div class="row mb-1">
        <div class="col-md-3">
            <input type="number" class="form-control" name="lowAmount" />
        </div>
        <div class="col-md-3">
            <input type="number" class="form-control" name="largeAmount" />
        </div>
        <div class="col-md-3">
            <input type="submit" class="btn btn-success" value="Filter" />
        </div>
        <div class="col-md-3"></div>
    </div>
</form>

<div>
    <table class="table table-striped border mt-3" id="myTable">
        <thead>
            <tr class="table-info">
                <th>Name</th>
                <th>Price</th>
                <th>Product Color</th>
                <th>Available</th>
                <th>Product Type</th>
                <th>Special Tag</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.ProductColor</td>
                    <td>@item.IsAvailable</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.SpecialTag.TagName</td>
                    <td>
                        <partial name="_ProductButtonPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
        $(function(){
            var save = '@TempData["save"]'
            if(save != '') {
                alertify.success(save);
            }
        })
    </script>
}
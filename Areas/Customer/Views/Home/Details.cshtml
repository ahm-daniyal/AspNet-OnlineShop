@model OnlineShop.Models.Products
@{
    ViewData["Title"] = "Details";
}
@using OnlineShop.Utility
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    List<Products> products = HttpContextAccessor.HttpContext.Session.Get<List<Products>>("products");
    Products product = null;
    if (products != null)
    {
        product = products.FirstOrDefault(c => c.Id == Model.Id);
    }
}

<h3 class="text-info">Product Details</h3>
<form method="post" asp-action="Details" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" asp-for="Id" />
                        <input asp-for="Name" readonly class="form-control">
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-md-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Price" readonly class="form-control">
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-md-4">
                        <label asp-for="ProductColor"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductColor" readonly class="form-control">
                    </div>
                    <span asp-validation-for="ProductColor" class="text-danger"></span>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-md-4">
                        <label asp-for="ProductTypeId"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="ProductTypes.ProductType" readonly class="form-control">
                    </div>
                    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-md-4">
                        <label asp-for="SpecialTagId"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="SpecialTag.TagName" readonly class="form-control">
                    </div>
                    <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                </div>
                <div class="form-group row mt-2">
                    <div class="col-md-4"></div>
                    <div class="col-md-8">
                        @if (product != null)
                        {
                            <button type="submit" class="btn btn-danger form-control" asp-action="Remove"
                                    asp-controller="Home" asp-route-id="@Model.Id">
                                Remove to Cart
                            </button>
                        } else
                        {
                            <input type="submit" class="btn btn-info form-control" value="Add to Cart" />
                        }
                    </div>
                </div>
                <div class="form-group mt-3">
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>

            <div class="col-md-1"></div>
            <div class="col-md-3">
                <img src="~/@Model.Image" width="100%" style="border-radius: 5px; border: 1px solid #efefef" />
                @if (Model.IsAvailable)
                {
                    <img src="~/Images/instock-logo.png" width="200px" height="50px" />
                }
                else
                {
                    <img src="~/Images/notinstock.jpg" width="200px" height="50px" />
                }
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}